<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author&.name %></td>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', [@author, book] %></td>
        <td><%= link_to 'Edit', edit_author_book_path(@author, book) %></td>
        <td><%= link_to 'Destroy', [@author, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_author_book_path(@author) %> |
<%= link_to 'Back', author_path(@author) %>
